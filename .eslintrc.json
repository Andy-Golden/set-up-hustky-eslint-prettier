{
  "env": {
    "browser": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx", "*.css"],
      "extends": [
        "prettier",
        "standard-with-typescript",
        "plugin:react/recommended",
        "eslint:recommended",
        "plugin:prettier/recommended"
      ]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "extraFileExtensions": [".css"]
  },
  "plugins": ["react", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": "error",
    "no-console": "error",
    "prettier/prettier": ["error"]
  },
  "globals": {
    "JSX": "readonly"
  }
}
